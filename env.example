# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY="your-firebase-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-app-id"

# NextAuth Configuration (legacy - minimal configuration)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Role-Based Authentication Configuration
# Super Admin Credentials (hardcoded fallback)
ADMIN_EMAIL="admin@insighture.com"
ADMIN_PASSWORD="admin123"

# Domain-based Admin Access
# Users with emails from these domains will automatically get admin role
ADMIN_DOMAINS="insighture.com,yourcompany.com"

# Demo Mode (set to true to enable demo credentials)
NEXT_PUBLIC_DEMO_MODE="true"

# Available Demo Credentials:
# Super Admin: demo@insighture.com / demo123 (full system access)
# Admin: admin@company.com / admin123 (organization management)
# Owner: owner@company.com / owner123 (survey creation and management)

# AI Services
OPENAI_API_KEY="your-openai-key"
ANTHROPIC_API_KEY="your-anthropic-key"
GOOGLE_GEMINI_KEY="your-gemini-key"
DEEPSEEK_API_KEY="your-deepseek-key"

# Real-time
NEXT_PUBLIC_WEBSOCKET_URL="ws://localhost:3001"

# Feature Flags
ENABLE_AI_ANALYSIS="true"
ENABLE_REALTIME="true"
MAX_AI_RETRIES="3"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Authentication Methods:
# 1. Firebase Email/Password - For demo credentials and initial setup
# 2. Firebase Google Auth - For production use with domain restrictions
# 3. Anonymous Auth - For survey responses (limited permissions)

# Role Hierarchy:
# - super_admin: Full system control (manages all organizations)
# - admin: Organization management (manages users, surveys, clients)
# - owner: Survey management (creates and manages surveys)
# - user: Basic access (submits survey responses)
